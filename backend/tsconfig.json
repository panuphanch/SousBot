{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2017", "DOM"],
    "module": "commonjs",
    "rootDir": "./src",            // Add this to specify source directory
    "outDir": "./dist",            // Add this to specify output directory
    "moduleResolution": "node",    // Add this for proper module resolution
    "resolveJsonModule": true,     // Add this to allow importing JSON files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": [
    "src/**/*"                     // Only include files from src directory
  ],
  "exclude": [
    "node_modules",
    "frontend/**/*",               // Exclude frontend files
    "dist",
    "**/*.test.ts"
  ]
}